<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/regist_button"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="@string/all_return"
            android:textColor="#eeeeee"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/event_progress"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="67.2dp"
        android:layout_alignParentBottom="true"
        android:background="#c6c6c6" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10.5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/event_progress_send_bg" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="9dp"
            android:focusable="true"
        	android:focusableInTouchMode="true"
            android:layout_centerVertical="true" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                
                android:layout_centerVertical="true"
                
                android:background="@null"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textSize="12sp" >
                
               
            </EditText>

        </RelativeLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="43.2dp"
            android:layout_height="25.2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/send_message_selector"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative2"
        android:layout_below="@+id/relativeLayout1"
        android:cacheColorHint="#00000000"
        android:footerDividersEnabled="true" 
        android:descendantFocusability="blocksDescendants"
        android:layout_marginLeft="10.5dp"
        android:layout_marginRight="10.5dp"
        android:divider="@null"
        >
    </ListView>

</RelativeLayout>