<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#cacaca"
    android:layout_height="63.9dp" 
    
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/orderList"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
        
        
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:textColor="#262528"
        android:text="空调开不了" />

    <Button
        android:id="@+id/button1"
        android:layout_width="5.3dp"
        android:layout_height="5.3dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/button2"
        android:background="@drawable/remider_list_item_image_bg" />
        
         <Button
            android:id="@+id/button2"
            android:layout_width="9.8dp"
            android:layout_height="13.8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:background="@drawable/right_enter" />

         

    </RelativeLayout>

</RelativeLayout>
