<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cacaca" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar" >

         <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/regist_button"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="@string/all_return"
                android:textColor="#eeeeee"
                android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/loss_pwd"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
     <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:layout_below="@+id/relativeLayout1"
        android:overScrollMode="always">
        <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/send_pwd_to_phone_textview"
        android:textColor="#262528"
        android:textSize="12sp"
        android:textStyle="bold"/>
     
    <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="27dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/login_enter"
                android:orientation="vertical" >

              <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14.7dp"
                android:text="@string/username"
                android:textColor="#262528"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/input_username_hint"
                
                android:layout_marginLeft="9dp"
                android:maxLength="12"
                
                android:textSize="12sp"
                android:singleLine="true" />
        </LinearLayout>
              <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14.7dp"
                android:text="@string/phone_number"
                android:textColor="#262528"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/phone_hint"
                android:layout_marginLeft="9dp"
                android:maxLength="11"
                android:digits="@string/phone_digits"
                android:inputType="phone"
                android:textSize="12sp"
                android:singleLine="true" />
        </LinearLayout>
            </LinearLayout>
            
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6.4dp"
        
        android:textColor="#ff0000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linear"
        android:layout_alignRight="@+id/linear"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="10dp"
        android:background="@drawable/regist_button_sumit"
        android:text="@string/send"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold" />
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>

        