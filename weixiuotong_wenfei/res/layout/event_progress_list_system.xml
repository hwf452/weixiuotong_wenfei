<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#cacaca"
    android:layout_height="wrap_content" 
    
    android:descendantFocusability="blocksDescendants">
    
    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:textSize="9.9sp"
            android:gravity="center"
            android:background="@drawable/name1_background2"
            android:text="系统" />

    <RelativeLayout
        android:id="@+id/orderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/output1_background2"
        android:layout_toRightOf="@+id/textView1"
         >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="9sp"
            android:textColor="#000000"
            android:text="小密蜂（99999）向维员（98333）发送维修请求。" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:textSize="7.8dp"
            android:textColor="#333333"
            android:layout_marginRight="6dp"
            android:layout_marginTop="12dp"
            android:text="2013-09-29 10:29" />
     
    </RelativeLayout>

</RelativeLayout>
